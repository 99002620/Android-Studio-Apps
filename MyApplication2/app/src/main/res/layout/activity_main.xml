<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/dialog_ic_close_pressed_holo_light"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ab_bottom_transparent_light_holo_9"/>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/btn_cab_done_pressed_holo_dark_9"/>

        <ImageView
            android:id="@+id/image4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/btn_radio_off_holo_light"/>


    </LinearLayout>
</HorizontalScrollView>